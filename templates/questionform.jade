article(class="list-group-item")
  input(type="text", placeholder="Question Title")
  input(type="text", placeholder="Question Help Text")
  .form-group
    label(for="type") Question Type:
      select.choose-type-select.form-control
        option Scale
        option Multiple Choice
        option Text

  include multiple-choice
  include scale
  include text

  div.btn-group.btn-group-sm(role="group")
    a.btn.btn-primary.btn-sm.edit-question-save(type="submit") Save
    a.btn.btn-primary.btn-sm.edit-question-cancel(type="cancel", href="/surveys") Cancel








