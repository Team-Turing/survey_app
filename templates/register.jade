extends layout

block content
  include navbar-home.jade
  .container
    h1 Register
    p.lead Create a Username and Password.
    br
    form(role='form', action="/auth/register", method="post", style='max-width: 300px;')
      .form-group
        input.form-control(type='text', name="username", placeholder='Enter Username')
      .form-group
        input.form-control(type='password', name="password", placeholder='Password')
      p
        button.btn.btn-primary(type='submit', value="Register") Submit

