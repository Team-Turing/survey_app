extend layout
block content
  include navbar-user.jade
  .container
    .row
      .col-sm-12
        h2 Dashboard
        .btn.btn-default Create Survey
        .list-group
          for survey in surveys
            a.list-group-item(href='#')
              h4.list-group-item-heading #{survey.title}
              p.list-group-item-text #{survey.description}
              div.btn-group.btn-group-sm(role='group')
                button.btn.btn-default(href="#") View Results
                button.btn.btn-default(href="surveys/#{survey.id}") Edit Survey


